<% @posts.each do |post| %>
    <div class="row">
        <h2><%= post.title %></h2>
        <%= truncate(post.content, length: 300) %><br>
          <h6 class="subheader"><%= l post.updated_at, format: :short %> By <%= post_of_user(post)%></h6>
        <%= link_to (t "Read More"), post_path(post) %>
   </div>
   <hr>
 <% end %>
